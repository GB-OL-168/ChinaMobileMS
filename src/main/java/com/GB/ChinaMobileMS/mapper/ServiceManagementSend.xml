<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.GB.ChinaMobileMS.dao.ServiceManagementSendMapper">

	<select id="querySendByID" parameterType="int" resultType="com.GB.ChinaMobileMS.entity.InvestigationTableEntity">
		select *
		from investigation_table
		where investigation_id = #{investigationId}
	</select>
	
 	<update id="updateSendService" parameterType="InvestigationTableEntity">
		update investigation_table 
		set
		status = #{status}, recovery_time = #{recoveryTime}
		where investigation_id = 2
	</update>

</mapper>