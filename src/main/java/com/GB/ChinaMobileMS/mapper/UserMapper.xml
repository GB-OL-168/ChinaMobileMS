<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.GB.ChinaMobileMS.dao.UserMapper">

	<select id="findByUserName" parameterType="string" resultType="com.GB.ChinaMobileMS.entity.User">
		select *
		from user
		where user_name=#{userName}
	</select>

	

	<insert id="insertUser" parameterType="User"  >
		INSERT INTO user(user_name, account_name,remark,phone,email,birthday,department,identification,sex,password)
		VALUES (#{userName},#{accountName},#{remark},#{phone},#{email},#{birthday},#{department},#{identification},#{sex},#{password})
	</insert>
	
	<select id="listUser"  resultType="User">
		select * from user
		
	</select>
	
	<select id = "queryUserByUserName" parameterType="string" resultType="com.GB.ChinaMobileMS.entity.User">
		select *
		from user
		where user_name = #{userName}
	</select>
	

	<!-- SQL语句 namespace命名空间  id UserMapper里面的方法名  
	parameterType参数列表 resultType 返回的类型 -->

</mapper>